---
interface Props {
  title: string;
}

const { title } = Astro.props;

const year = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Evolut" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="flex h-24 items-center justify-center">
      <div class="text-4xl font-bold"><a href="/">Evolut</a></div>
    </header>
    <slot />
    <footer class="flex h-32 flex-col items-center justify-center gap-2">
      <div class="text-2xl font-bold"><a href="/">Evolut</a></div>
      <div class="text-slate-300 hover:text-slate-100">
        <a href="/get-started">Get Started</a>
      </div>
      <div class="text-slate-300">
        &#169;{year} evolut.TLD. All Rights Reserved.
      </div>
    </footer>
  </body>
</html>

<style is:global>
  body {
    @apply bg-black text-slate-100;

    overscroll-behavior: none;
  }
</style>
